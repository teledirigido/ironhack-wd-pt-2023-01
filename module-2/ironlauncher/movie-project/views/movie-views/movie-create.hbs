<h1>Creating a new Movie</h1>

{{!-- views/movie-views/movie-create.hbs --}}

<h2>Create a movie</h2>
<div class="row">
  <div class="col-md-6">

    <form action="/movies/create" method="post" enctype="multipart/form-data"> {{!-- !!! --}}

      <div class="form-group">
        <label>Title:
          <input type="text" name="title" class="form-control" />
        </label>
      </div>

      <div class="form-group">
        <label>Description:
          <textarea name="description" cols="30" rows="4" class="form-control"> </textarea>
        </label>
      </div>

      <div class="form-group">
        <label>Image:
          <input type="file" name="movie-cover-image" class="form-control-file" /> 
          {{!-- input[type="file"] --}}
        </label>
      </div>

      <button type="submit" class="btn btn-primary">Create</button>
    </form>
  </div>
</div>
