<h1>Edit: {{ title }}</h1>

<div class="row">
  <div class="col-md-6">

    <form action="/movies/{{id}}/edit" method="post" enctype="multipart/form-data"> {{!-- !!! --}}

      <div class="form-group">
        <label>Title:
          <input type="text" name="title" class="form-control" value="{{title}}" />
        </label>
      </div>

      <div class="form-group">
        <label>Description:
          <textarea name="description" cols="30" rows="4" class="form-control">{{ description }}</textarea>
        </label>
      </div>

      <div class="form-group">
        <label>Image:
          <input type="file" name="movie-cover-image" class="form-control-file" /> 
          {{!-- input[type="file"] --}}
        </label>
        {{#if imageUrl }}
          <p style="margin:0">Current Image:</p>
          <img src="{{ imageUrl }}" class="img-fluid" alt="">
          <a href="/movies/{{id}}/delete-image">Eliminar Imagen</a>
        {{/if}}
      </div>

      <button type="submit" class="btn btn-primary">Update</button>
    </form>

  </div>
</div>
